        </th>
        <td>
            @Html.DisplayFor(modelItem => item.session.Commentary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bps.SleepQuality)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bps.TrustInSelf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bps.Stress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bps.Fatigue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bps.Stiffness)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bps.Motivation)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.session.SessionId }) |
            @Html.ActionLink("Details", "Details", new { id = item.session.SessionId }) |
