@model IEnumerable<Exercises.ViewModels.SessionBPSViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Sessions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
